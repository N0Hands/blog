

<%= form_for :post, url: posts_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <p>
      <%= f.submit %>
      </p>
<% end %>


<%= form_for @post, :url => post_path, :html => { :multipart => true} do |form| %>
  <% form.file_field :avatar %>
<% end %>

<%= link_to 'Back', posts_path %>